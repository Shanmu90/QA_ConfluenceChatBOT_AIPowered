# MongoDB Configuration
MONGODB_URI="mongodb+srv://username:password@cluster-name.mongodb.net/?appName=qa-chatbot"
DB_NAME="qa_chatbot"
COLLECTION_NAME="test_cases"
VECTOR_INDEX_NAME="vector_index_test_cases"
BM25_INDEX_NAME="bm25_index_test_cases"

# Mistral AI (Embeddings)
MISTRAL_API_KEY="your_mistral_api_key_here"
MISTRAL_EMBEDDING_MODEL="mistral-embed"

# Groq (LLM for Reranking & Summarization)
GROQ_API_KEY="your_groq_api_key_here"
GROQ_RERANK_MODEL="llama-3.2-3b-preview"
GROQ_SUMMARIZATION_MODEL="llama-3.3-70b-versatile"

# Confluence API
CONFLUENCE_BASE_URL="https://your-org.atlassian.net/wiki"
CONFLUENCE_USER_EMAIL="your-email@org.com"
CONFLUENCE_API_TOKEN="your_confluence_api_token"

# Server
PORT=3001
NODE_ENV=development

# Search Configuration
DEFAULT_SEARCH_LIMIT=10
BM25_WEIGHT=0.6
VECTOR_WEIGHT=0.4
BATCH_SIZE=100
RATE_LIMIT_DELAY=500
MAX_RETRIES=3
